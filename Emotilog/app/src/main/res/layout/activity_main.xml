<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emotilog.app.emotilog.MainActivity">

    <Button
        android:id="@+id/open_diary_button"
        android:layout_width="179dp"
        android:layout_height="244dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#13CE66"
        android:onClick="openDiary"
        android:text="Diary"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/open_add_entry_button"
        android:layout_width="179dp"
        android:layout_height="244dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#1FB6FF"
        android:onClick="AddEntry"
        android:text="Add Entry"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/open_diary_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/open_get_help_button"
        android:layout_width="179dp"
        android:layout_height="244dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#FF5216"
        android:onClick="openGetHelp"
        android:text="Get Help"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/open_settings_button"
        app:layout_constraintTop_toBottomOf="@+id/open_diary_button" />

    <Button
        android:id="@+id/open_settings_button"
        android:layout_width="179dp"
        android:layout_height="244dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="#FFC82C"
        android:onClick="openSettings"
        android:text="Settings"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_add_entry_button" />

    <Button
        android:id="@+id/analytics_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analytics"
        android:onClick="openAnalytics" />

    <ImageView
        android:id="@+id/AddEntry"
        android:elevation="3dp"
        android:layout_width="95dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/add"
        android:layout_marginRight="57dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="196dp"
        app:layout_constraintBottom_toTopOf="@+id/settings" />

    <ImageView
        android:id="@+id/Help"
        android:elevation="3dp"
        android:layout_width="94dp"
        android:layout_height="92dp"
        app:srcCompat="@drawable/help"
        android:layout_marginTop="305dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/settings"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.335"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.03" />

    <ImageView
        android:id="@+id/settings"
        android:elevation="3dp"
        android:layout_width="90dp"
        android:layout_height="92dp"
        app:srcCompat="@drawable/settings"
        android:layout_marginRight="62dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="199dp" />

    <ImageView
        android:id="@+id/diary"
        android:elevation="3dp"
        android:layout_width="94dp"
        android:layout_height="88dp"
        app:srcCompat="@drawable/diary"
        app:layout_constraintRight_toLeftOf="@+id/AddEntry"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/Help"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
