<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emotilog.app.emotilog.MainActivity"
    >

    <Button
        android:id="@+id/open_diary_button"
        android:layout_width="179dp"
        android:layout_height="244dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#13CE66"
        android:onClick="openDiary"
        android:text="Diary"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/open_add_entry_button"
        android:layout_width="0dp"
        android:layout_height="244dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:background="#1FB6FF"
        android:onClick="AddEntry"
        android:text="Add Entry"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/open_diary_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/open_get_help_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="21dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:background="#FF5216"
        android:onClick="openGetHelp"
        android:text="Get Help"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/open_settings_button"
        app:layout_constraintTop_toBottomOf="@+id/open_diary_button"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/open_settings_button"
        android:layout_width="179dp"
        android:layout_height="0dp"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="45dp"
        android:background="#FFC82C"
        android:onClick="openSettings"
        android:text="Settings"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_add_entry_button"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/analytics_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analytics"
        android:onClick="openAnalytics"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/diary"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/diary" />

    <ImageView
        android:id="@+id/AddEntry"
        android:elevation="3dp"
        android:layout_width="100dp"
        android:layout_height="94dp"
        app:srcCompat="@drawable/add"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/open_add_entry_button"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/open_add_entry_button"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/open_add_entry_button"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/Help"
        android:layout_width="97dp"
        android:layout_height="99dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:elevation="3dp"
        app:layout_constraintLeft_toLeftOf="@+id/open_get_help_button"
        app:srcCompat="@drawable/help"
        app:layout_constraintBottom_toBottomOf="@+id/open_get_help_button"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/open_get_help_button"
        app:layout_constraintTop_toTopOf="@+id/open_get_help_button"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/settings"
        android:elevation="3dp"
        android:layout_width="90dp"
        android:layout_height="92dp"
        app:srcCompat="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="@+id/open_settings_button"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/open_settings_button"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="43dp"
        app:layout_constraintLeft_toLeftOf="@+id/open_settings_button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/open_settings_button"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/diary"
        android:elevation="3dp"
        android:layout_width="93dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/diary"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/open_diary_button"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/open_diary_button"
        app:layout_constraintTop_toTopOf="@+id/open_diary_button"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/open_diary_button"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
